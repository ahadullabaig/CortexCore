# ============================================
# CortexCore - ENVIRONMENT VARIABLES
# ============================================
# Copy this file to .env and fill in your values
# Command: cp .env.example .env
# NEVER commit .env to git (it's in .gitignore)
#
# QUICK START: For most users, the defaults below will work fine.
# The setup script (scripts/01_setup_environment.sh) automatically
# creates .env from this file. Key auto-detected settings:
# - DEVICE: Auto-detects CUDA/MPS/CPU (no manual config needed)
# - CUDA_VISIBLE_DEVICES: Auto-uses first available GPU
# - Paths: Automatically created during setup

# ==========================================
# PROJECT SETTINGS
# ==========================================

PROJECT_NAME=cortexcore
# Options: development, staging, production
ENVIRONMENT=development
DEBUG=true

# ==========================================
# MODEL CONFIGURATION
# ==========================================

# Model paths
MODEL_PATH=models/best_model.pt
MODEL_CHECKPOINT_DIR=models/checkpoints/
MODEL_VERSION=v1.0-mvp

# Training parameters (defaults)
BATCH_SIZE=32
LEARNING_RATE=0.001
NUM_EPOCHS=50
# Leave DEVICE commented to auto-detect (cuda/mps/cpu)
# DEVICE=auto

# ==========================================
# DATA CONFIGURATION
# ==========================================

# Data paths
DATA_DIR=data/
SYNTHETIC_DATA_DIR=data/synthetic/
CACHE_DIR=data/cache/
RAW_DATA_DIR=data/raw/

# Data generation parameters (in seconds and Hz)
SIGNAL_DURATION=10
SAMPLING_RATE=250
NUM_TRAIN_SAMPLES=1000
NUM_VAL_SAMPLES=200
NUM_TEST_SAMPLES=200

# ==========================================
# SNN CONFIGURATION
# ==========================================

# Network architecture
# Time steps after spike encoding (default: 100, see src/data.py:rate_encode)
NUM_TIME_STEPS=100
NUM_HIDDEN=128
# Number of classes (adjust as needed)
NUM_OUTPUTS=2

# Neuron parameters
MEMBRANE_THRESHOLD=1.0
MEMBRANE_DECAY=0.9
SPIKE_GRAD_SURROGATE=fast_sigmoid

# Learning parameters
# Enable for biological learning
STDP_ENABLED=false
# Options: surrogate_gradient, stdp, r_stdp
LEARNING_RULE=surrogate_gradient

# ==========================================
# DEMO SERVER CONFIGURATION
# ==========================================

# Flask settings
FLASK_APP=demo/app.py
# Options: development, production
FLASK_ENV=development
FLASK_DEBUG=true

# Server settings
DEMO_HOST=0.0.0.0
DEMO_PORT=5000
DEMO_THREADED=true

# CORS settings (for API access)
CORS_ENABLED=true
# Use specific origins in production (e.g., "http://localhost:3000")
CORS_ORIGINS="*"

# ==========================================
# EXPERIMENT TRACKING (Optional)
# ==========================================

# Weights & Biases (uncomment to use)
# WANDB_ENABLED=false
# WANDB_PROJECT=cortexcore
# WANDB_ENTITY=your-team-name
# WANDB_API_KEY=your-api-key-here

# MLflow (uncomment to use)
# MLFLOW_ENABLED=false
# MLFLOW_TRACKING_URI=http://localhost:5000
# MLFLOW_EXPERIMENT_NAME=snn-healthcare

# ==========================================
# LOGGING
# ==========================================

# Options: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO
LOG_DIR=logs/
LOG_FILE=app.log
# Python logging format string (must be quoted)
LOG_FORMAT="%(asctime)s - %(name)s - %(levelname)s - %(message)s"

# ==========================================
# PERFORMANCE & OPTIMIZATION
# ==========================================

# GPU settings
# Uncomment to specify GPU ID (default: use first available GPU)
# CUDA_VISIBLE_DEVICES=0
# Data loader workers (reduce to 0-2 if low RAM)
NUM_WORKERS=4
# Faster GPU transfer (set to false for CPU-only systems)
PIN_MEMORY=true

# Mixed precision training (optional)
# Automatic Mixed Precision
USE_AMP=false
# Options: O0, O1, O2, O3
AMP_OPT_LEVEL=O1

# ==========================================
# CLINICAL VALIDATION
# ==========================================

# Validation thresholds
MIN_SENSITIVITY=0.85
MIN_SPECIFICITY=0.85
MIN_ACCURACY=0.85

# Clinical classes (space-separated for bash compatibility)
# Adjust as needed (space-separated, not JSON array)
CLINICAL_CLASSES="Normal Arrhythmia"

# ==========================================
# DEPLOYMENT (Phase 2+)
# ==========================================

# Edge deployment
# Options: jetson_nano, coral_tpu, raspberry_pi, x86_cpu
EDGE_DEVICE=jetson_nano
EDGE_MODEL_PATH=models/deployed/edge_model.onnx

# Inference settings
MAX_INFERENCE_TIME_MS=100
BATCH_INFERENCE=false

# ==========================================
# API SETTINGS (Phase 2+)
# ==========================================

# API keys (for external services)
# API_KEY=your-api-key-here
# API_SECRET=your-api-secret-here

# Rate limiting
# RATE_LIMIT_ENABLED=true
# RATE_LIMIT_PER_MINUTE=60

# ==========================================
# DATABASE (Phase 3+, if needed)
# ==========================================

# DATABASE_URL=sqlite:///data/app.db
# DATABASE_ECHO=false

# Redis (for caching/queueing)
# REDIS_HOST=localhost
# REDIS_PORT=6379
# REDIS_DB=0

# ==========================================
# MONITORING (Phase 3+)
# ==========================================

# Prometheus metrics
# PROMETHEUS_PORT=9090

# Sentry error tracking
# SENTRY_DSN=your-sentry-dsn-here

# ==========================================
# TESTING
# ==========================================

TEST_DATA_SIZE=100
TEST_BATCH_SIZE=16
TEST_SEED=42

# ==========================================
# HACKATHON-SPECIFIC
# ==========================================

TEAM_NAME="Your Team Name"
COMPETITION_NAME="Neuromorphic Healthcare Challenge"
# Enable demo-specific features
DEMO_MODE=true
VERBOSE_OUTPUT=true

# ==========================================
# NOTES
# ==========================================

# 1. Copy this file: cp .env.example .env (done automatically by scripts/01_setup_environment.sh)
# 2. Fill in your actual values in .env (optional - defaults work for quick-start)
# 3. NEVER commit .env to version control
# 4. Update this .env.example when adding new variables
# 5. Document each variable clearly for team members
#
# MINIMAL QUICK-START CONFIG (just these 5 variables):
# -------------------------------------------------------
# BATCH_SIZE=32          # Reduce to 16 if CUDA out of memory
# NUM_EPOCHS=50          # Use 5 for quick testing
# SAMPLING_RATE=250      # ECG/EEG sampling rate (Hz)
# SIGNAL_DURATION=10     # Signal length (seconds)
# MODEL_PATH=models/best_model.pt
#
# All other variables are auto-detected or have sensible defaults!
