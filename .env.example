# ============================================
# NEUROMORPHIC SNN HEALTHCARE - ENVIRONMENT VARIABLES
# ============================================
# Copy this file to .env and fill in your values
# Command: cp .env.example .env
# NEVER commit .env to git (it's in .gitignore)

# ==========================================
# PROJECT SETTINGS
# ==========================================

PROJECT_NAME=neuromorphic-snn-healthcare
ENVIRONMENT=development  # development, staging, production
DEBUG=True

# ==========================================
# MODEL CONFIGURATION
# ==========================================

# Model paths
MODEL_PATH=models/best_model.pt
MODEL_CHECKPOINT_DIR=models/checkpoints/
MODEL_VERSION=v1.0-mvp

# Training parameters (defaults)
BATCH_SIZE=32
LEARNING_RATE=0.001
NUM_EPOCHS=50
DEVICE=cuda  # cuda, cpu, mps (Apple Silicon)

# ==========================================
# DATA CONFIGURATION
# ==========================================

# Data paths
DATA_DIR=data/
SYNTHETIC_DATA_DIR=data/synthetic/
CACHE_DIR=data/cache/
RAW_DATA_DIR=data/raw/

# Data generation parameters
SIGNAL_DURATION=10  # seconds
SAMPLING_RATE=250  # Hz
NUM_TRAIN_SAMPLES=1000
NUM_VAL_SAMPLES=200
NUM_TEST_SAMPLES=200

# ==========================================
# SNN CONFIGURATION
# ==========================================

# Network architecture
NUM_INPUTS=1000  # Time steps after encoding
NUM_HIDDEN=128
NUM_OUTPUTS=2  # Number of classes (adjust as needed)

# Neuron parameters
MEMBRANE_THRESHOLD=1.0
MEMBRANE_DECAY=0.9
SPIKE_GRAD_SURROGATE=fast_sigmoid

# Learning parameters
STDP_ENABLED=False  # Enable for biological learning
LEARNING_RULE=surrogate_gradient  # surrogate_gradient, stdp, r_stdp

# ==========================================
# DEMO SERVER CONFIGURATION
# ==========================================

# Flask settings
FLASK_APP=demo/app.py
FLASK_ENV=development  # development, production
FLASK_DEBUG=True

# Server settings
DEMO_HOST=0.0.0.0
DEMO_PORT=5000
DEMO_THREADED=True

# CORS settings (for API access)
CORS_ENABLED=True
CORS_ORIGINS=*  # Use specific origins in production

# ==========================================
# EXPERIMENT TRACKING (Optional)
# ==========================================

# Weights & Biases (uncomment to use)
# WANDB_ENABLED=False
# WANDB_PROJECT=neuromorphic-snn-healthcare
# WANDB_ENTITY=your-team-name
# WANDB_API_KEY=your-api-key-here

# MLflow (uncomment to use)
# MLFLOW_ENABLED=False
# MLFLOW_TRACKING_URI=http://localhost:5000
# MLFLOW_EXPERIMENT_NAME=snn-healthcare

# ==========================================
# LOGGING
# ==========================================

LOG_LEVEL=INFO  # DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_DIR=logs/
LOG_FILE=app.log
LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s

# ==========================================
# PERFORMANCE & OPTIMIZATION
# ==========================================

# GPU settings
CUDA_VISIBLE_DEVICES=0  # GPU ID to use
NUM_WORKERS=4  # Data loader workers
PIN_MEMORY=True  # Faster GPU transfer

# Mixed precision training (optional)
USE_AMP=False  # Automatic Mixed Precision
AMP_OPT_LEVEL=O1  # O0, O1, O2, O3

# ==========================================
# CLINICAL VALIDATION
# ==========================================

# Validation thresholds
MIN_SENSITIVITY=0.85
MIN_SPECIFICITY=0.85
MIN_ACCURACY=0.85

# Clinical classes
CLINICAL_CLASSES=["Normal", "Arrhythmia"]  # Adjust as needed

# ==========================================
# DEPLOYMENT (Phase 2+)
# ==========================================

# Edge deployment
EDGE_DEVICE=jetson_nano  # jetson_nano, coral_tpu, raspberry_pi, x86_cpu
EDGE_MODEL_PATH=models/deployed/edge_model.onnx

# Inference settings
MAX_INFERENCE_TIME_MS=100
BATCH_INFERENCE=False

# ==========================================
# API SETTINGS (Phase 2+)
# ==========================================

# API keys (for external services)
# API_KEY=your-api-key-here
# API_SECRET=your-api-secret-here

# Rate limiting
# RATE_LIMIT_ENABLED=True
# RATE_LIMIT_PER_MINUTE=60

# ==========================================
# DATABASE (Phase 3+, if needed)
# ==========================================

# DATABASE_URL=sqlite:///data/app.db
# DATABASE_ECHO=False

# Redis (for caching/queueing)
# REDIS_HOST=localhost
# REDIS_PORT=6379
# REDIS_DB=0

# ==========================================
# MONITORING (Phase 3+)
# ==========================================

# Prometheus metrics
# PROMETHEUS_PORT=9090

# Sentry error tracking
# SENTRY_DSN=your-sentry-dsn-here

# ==========================================
# TESTING
# ==========================================

TEST_DATA_SIZE=100
TEST_BATCH_SIZE=16
TEST_SEED=42

# ==========================================
# HACKATHON-SPECIFIC
# ==========================================

TEAM_NAME=Your Team Name
COMPETITION_NAME=Neuromorphic Healthcare Challenge
DEMO_MODE=True  # Enable demo-specific features
VERBOSE_OUTPUT=True

# ==========================================
# NOTES
# ==========================================

# 1. Copy this file: cp .env.example .env
# 2. Fill in your actual values in .env
# 3. NEVER commit .env to version control
# 4. Update this .env.example when adding new variables
# 5. Document each variable clearly for team members
